@model IEnumerable<Restaurant.Models.UOM_VM>

@{
    ViewData["Title"] = "getallUOM";
}

<h1>getallUOM</h1>
<style>
    table{
        border-collapse:collapse;
        width:100%;
    }
    th,td{
        text-align:left;
        padding:px;
    }
    tr:nth-child(even){
        background-color:grey;   }
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UOMid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UOMname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UOMid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UOMname)
            </td>
            <td>
                <a asp-controller="UOM" asp-action="editUOM" asp-route-UOMid="@item.UOMid">Edit</a>

            </td>
        </tr>
}
    </tbody>
</table>
